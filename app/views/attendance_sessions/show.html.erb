<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-12">
      <div class="card shadow-lg rounded">
        <div class="card-header text-center bg-primary text-white">
          <h1><i class="bi bi-calendar-check-fill"></i> Attendance Session List</h1>
        </div>
        <div class="card-body">
          <p><strong>Topic:</strong> <%= @attendance_session.name %></p>
          <p><strong>Summary:</strong> <%= @attendance_session.summary %></p>
<!--          <p><strong>Total Attend:</strong> <%#= @attendance_session.total_attend %></p>-->
<!--          <p><strong>Total Not Attend:</strong> <%#= @attendance_session.total_not_attend %></p>-->
          <p><strong>Total Enrolled Students:</strong> <%= @my_students.count %></p>
          <%= submit_tag 'Submit', class: 'btn btn-primary' %>
          <hr>
          <%= form_with(url: attendance_logs_path, method: :post, local: true, data: {turbo: false}) do %>
            <%=hidden_field_tag :attendance_session_id, @attendance_session.id %>
            <table class="table table-striped">
              <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">NIM</th>
                <th scope="col">Status</th>
              </tr>
              </thead>
              <tbody>
              <% @my_students.each_with_index do |student, index| %>
                <tr>
                  <th scope="row"><%= index + 1 %></th>
                  <td><%= student.nama %></td>
                  <td><%= student.nim %></td>
                  <td>
                    <select name="attendance_logs[<%= student.id %>][status]" class="form-select">
                      <%= options_for_select(AttendanceStatus.available_status) %>
                    </select>
                  </td>
                </tr>
              <% end %>
              </tbody>
            </table>
            <%= submit_tag 'Submit', class: 'btn btn-primary' %>
          <% end %>
          <hr>
          <%= link_to '<i class="bi bi-pencil-fill"></i> Edit Session'.html_safe,
                      edit_attendance_session_path(@attendance_session), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>
</div>