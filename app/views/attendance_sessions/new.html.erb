<% provide(:title, "Attendance Session") %>
<h1>Attendance Session</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @attendance_session, scope: :attendance_session, local: true,
                  data: {turbo: false}) do |f|%>
      <%= f.label :Pilih_mata_kuliah %>
      <%= f.select :course,
                   options_for_select(
                     @attendance_session_dropdown.map{ |option| [option[:nama_kul_ind],
                                                                 option[:pengajaran_id]] }),
                   {}, {class: 'form-select'} %>
      <%= f.label :nama_sesi %>
      <%= f.text_field :name, class: "form-control" %>

      <%= f.label :mulai %>
      <%= f.text_field :begin, class: "form-control" %>

      <%= f.label :berakhir %>
      <%= f.text_field :end, class: "form-control" %>

      <%= f.label :summary %>
      <%= f.text_field :summary, class: "form-control" %>

      <%= f.label :ruangan %>
      <%= f.text_field :room, class: "form-control" %>
      <%=f.submit "Buat sesi", class: "btn btn-primary"%>
    <%end %>
  </div>
</div>