<% provide(:title, "Log in") %>
<br><br>
<div class="text-center py-3">
  <img src="https://coderassetmiller.s3.amazonaws.com/itdel.jpg" alt="Logo" class="mb-3" style="max-width: 100px;"> <!-- Reduced logo size -->
</div>

<div class="container py-3">
  <div class="row justify-content-center">
    <div class="col-md-4 bg-light p-4 rounded"> <!-- Added background color and padding -->
      <h1 class="text-center mb-4">Sign in</h1> <!-- Added margin bottom -->
      <%= form_with(url: login_path, scope: :session, local: true, data: {turbo: false}) do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: 'form-label' %>
          <%= f.text_field :username, class: 'form-control', required: true,placeholder: 'Username' %>
        </div>
        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <div class="input-group">
            <%= f.password_field :password, class: 'form-control',
                                 required: true,placeholder: 'Password', id: 'password-field' %>
            <span class="input-group-text">
              <i id="password-icon" class="bi bi-eye-fill"></i>
            </span>
          </div>
        </div>
        <%= f.submit "Log in", class: "btn btn-primary w-100" %>
      <% end %>
    </div>
  </div>
</div>
<br><br> <br>
<script>
    document.getElementById('password-icon').addEventListener('click', function() {
        var passwordField = document.getElementById('password-field');
        var passwordIcon = document.getElementById('password-icon');
        if (passwordField.type === 'password') {
            passwordField.type = 'text';
            passwordIcon.classList.remove('bi-eye-fill');
            passwordIcon.classList.add('bi-eye-slash-fill');
        } else {
            passwordField.type = 'password';
            passwordIcon.classList.remove('bi-eye-slash-fill');
            passwordIcon.classList.add('bi-eye-fill');
        }
    });
</script>